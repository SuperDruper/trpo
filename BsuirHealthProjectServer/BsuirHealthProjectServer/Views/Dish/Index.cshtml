@model IEnumerable<BsuirHealthProjectServer.Models.DatabaseModels.Dish>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dish List</h2>
<div class="">
    <form class="" method="get" action="~/Dish/Search" role="search">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="name" id="srch-term">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>
</div>
<br/>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Category @Html.DisplayNameFor(model => model.DishCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalProteins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalFat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCarbs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCcal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalSugar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmountWater)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateModification)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.IsDeleted == false)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DishCategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @{
                    var smallDescription = item.Description;
                    if (item.Description != null && item.Description.Length > 15)
                    {
                        smallDescription = item.Description.Substring(0, 15) + "...";
                    }
                }
                @Html.DisplayFor(modelItem => smallDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalProteins)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalFat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCarbs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCcal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSugar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmountWater)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModification)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

} 

</table>
