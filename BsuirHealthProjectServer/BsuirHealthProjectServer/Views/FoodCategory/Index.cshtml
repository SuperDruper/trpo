@model IEnumerable<BsuirHealthProjectServer.Models.ViewModels.FoodCategoryViewModel>

@{
    ViewBag.Title = "Food Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Food Categories</h2>
<p>
    <h3>@Html.ActionLink("Create New", "Create")</h3>
</p>
<p>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateModification)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Image != null)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" width="64" height="64" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDeleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateModification)
        </td>
        <td>
            @using (Html.BeginForm("Delete", "FoodCategory", new { id = item.Id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Delete" class="btn btn-default form-control" />
            }
        </td>
    </tr>
}

</table>
