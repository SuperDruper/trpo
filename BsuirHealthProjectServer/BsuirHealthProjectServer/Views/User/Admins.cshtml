@model IEnumerable<BsuirHealthProjectServer.Models.ViewModels.AdminViewModel>

@{
    ViewBag.Title = "Admins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admins</h2>

<p>
    @Html.ActionLink("Create New Admin", "CreateAdmin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @using (Html.BeginForm("DeleteAdmin", "User", new { id = item.Id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Delete" class="btn btn-default form-control col-md-2" />
            }
        </td>
    </tr>
}

</table>
